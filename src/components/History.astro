---
import { Icon } from "astro-icon/components";
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const { imagePath, altText } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/*.{jpeg,jpg,png,gif}");
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`);
---

<section>
  <h1>Our History</h1>
  <p class="bold">Better Website Means A User Experience</p>
  <p>Ippsum is the result of synergy between our teams and our customers. Our company culture is focused on excellent productivity, customer satisfaction, respect for team and individual achievements.</p>
  <figure>
    <Image src={images[imagePath]()} alt={altText} />
    <Icon name="playbtn" />
  </figure>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    place-items: center;
    text-align: center;
    padding: 9.38rem;
    h1 {
      color: var(--color-text-big-white);
      font-family: var(--copy-font);
      font-size: var(--font-size-1);
      line-height: var(--lineheight-2);
      letter-spacing: var(--letter-space-s);
      padding: 0rem 0.6875rem;
      background: var(--bg-color-green);
      width: fit-content;
      border-radius: 1.25rem;
      margin-bottom: 1.38rem;
      text-transform: uppercase;
    }
    .bold {
      color: var(--color-text-big);
      font-family: var(--h-font);
      font-size: var(--font-size-4);
      font-weight: var(--font-weight-3);
      line-height: 3.263rem;
      width: 29.875rem;
      padding-bottom: 0.69rem;
    }
    p {
      color: var(--color-text-p);
      font-size: var(--font-size-1);
      line-height: var(--lineheight-2);
      width: 45.75rem;
      padding-bottom: 2.75rem;
    }

    figure {
      display: grid;
      align-items: center;
      position: relative;

      > * {
        grid-area: 1 / 1;
      }

      img {
        border-radius: 1.75rem;
        filter: brightness(75%);
      }

      &::after {
        content: "";
        position: absolute;
        right: 48rem;
        top: 12rem;
        background: var(--bg-color-green);
        width: 10.25rem;
        height: 11.4375rem;
        z-index: -1;
        border-radius: 1.3rem;
      }
      &::before {
        content: "";
        position: absolute;
        right: -6rem;
        top: -1.8rem;
        background: url("/images/pattern.svg");
        background-repeat: no-repeat;
        width: 17.12rem;
        height: 17.12rem;
        z-index: -1;
      }
      [data-icon="playbtn"] {
        width: 6.8125rem;
        height: 6.8125rem;
        display: flex;
        place-self: center;
        z-index: 1;
      }
    }
  }
</style>
